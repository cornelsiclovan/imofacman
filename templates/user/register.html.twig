{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Register!</h1>

            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first,{'label' : 'Password'}) }}
                {{ form_row(form.plainPassword.second, {'label' : 'Repeat password'}) }}
                {{ form_row(form.staffType) }}

                <button type="submit" class="btn btn-success" formnovalidate>Register</button>

            &nbsp <a href="{{ path('security_login')}}"> Go to login</a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}