{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Introduceti activitate efectuata:</h1>

                {{ form_start(activityForm) }}
                    {{ form_row(activityForm.intern, {'label' : 'Intern'}) }}
                    {{ form_row(activityForm.log, {'label' : 'Lucrare'}) }}
                    {{ form_row(activityForm.duration, {'label' : 'Durata'}) }}
                    {{ form_row(activityForm.details, {'label' : 'Observatii'}) }}
                    {{ form_row(activityForm.staff, {'label' : 'Nume'}) }}
                    {{ form_row(activityForm.owner, {'label' : 'Beneficiari'}) }}
                    {{ form_row(activityForm.lunchBreak, {'label' : 'Pauza de masa'}) }}
                    {{ form_row(activityForm.publishedAt, {'label' : 'Data'}) }}

                    <button type = "submit" class="btn btn-action" formnovalidate>Adauga activitate</button>

                {{ form_end(activityForm) }}
            </div>
        </div>
    </div>
{% endblock %}